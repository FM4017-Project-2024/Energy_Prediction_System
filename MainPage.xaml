<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Energy_Prediction_System.MainPage"
            Title="Energy Prediction System">

    <ScrollView>
        <VerticalStackLayout  Padding="30,0" Spacing="10" BackgroundColor="WhiteSmoke">
            <Image Source="eps.png"  Aspect="Center"    SemanticProperties.Description="Energy Prediction System EPS" />
            <Label Text="Live data" Style="{StaticResource Headline}" SemanticProperties.HeadingLevel="Level1" />
            <Button Text="Live sensor data"  Clicked="OnLiveSensorData1ButtonClicked" HorizontalOptions="Fill"/>
            <Button Text="Wheater data"  Clicked="OnLiveWheaterData1ButtonClicked" HorizontalOptions="Fill"/>
            
            <Label Text="Historical data" Style="{StaticResource Headline}" SemanticProperties.HeadingLevel="Level1" />
            <Button Text="Temperatures"  Clicked="OnHistData1ButtonClicked" HorizontalOptions="Fill"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
