<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Energy_Prediction_System.Energy"
             Title="Energy">
    
    <ScrollView>
        <VerticalStackLayout  Padding="1,0" Spacing="11" BackgroundColor="WhiteSmoke">
            <Label Text="Energy" FontSize="30" FontAttributes="Bold" HorizontalOptions="Center" TextColor="#202020" />


            <Label Text="Predicted energy consumption" FontSize="30" FontAttributes="Bold" HorizontalOptions="Center" TextColor="#AAAAAA"/>


            <Border Padding="5.0" HorizontalOptions="Fill" StrokeThickness="3" Stroke="#0091D5">
                <Label x:Name="Day01_Label" FontSize="22" Text="Day 1: " TextColor="#202020" FontAttributes="Bold"/>
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="10,10,10,10" />
                </Border.StrokeShape>
            </Border>

            <Border Padding="5.0" HorizontalOptions="Fill" StrokeThickness="3" Stroke="#0091D5">
                <Label x:Name="Day02_Label" FontSize="22" Text="Day 2: " TextColor="#202020" FontAttributes="Bold"/>
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="10,10,10,10" />
                </Border.StrokeShape>
            </Border>

            <Border Padding="5.0" HorizontalOptions="Fill" StrokeThickness="3" Stroke="#0091D5">
                <Label x:Name="Day03_Label" FontSize="22" Text="Day 3: " TextColor="#202020" FontAttributes="Bold"/>
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="10,10,10,10" />
                </Border.StrokeShape>
            </Border>

            <Border Padding="5.0" HorizontalOptions="Fill" StrokeThickness="3" Stroke="#0091D5">
                <Label x:Name="Day04_Label" FontSize="22" Text="Day 4: " TextColor="#202020" FontAttributes="Bold"/>
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="10,10,10,10" />
                </Border.StrokeShape>
            </Border>

            <Border Padding="5.0" HorizontalOptions="Fill" StrokeThickness="3" Stroke="#0091D5">
                <Label x:Name="Day05_Label" FontSize="22" Text="Day 5: " TextColor="#202020" FontAttributes="Bold"/>
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="10,10,10,10" />
                </Border.StrokeShape>
            </Border>

            <Border Padding="5.0" HorizontalOptions="Fill" StrokeThickness="3" Stroke="#0091D5">
                <Label x:Name="Day06_Label" FontSize="22" Text="Day 6: " TextColor="#202020" FontAttributes="Bold"/>
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="10,10,10,10" />
                </Border.StrokeShape>
            </Border>

            <Border Padding="5.0" HorizontalOptions="Fill" StrokeThickness="3" Stroke="#0091D5">
                <Label x:Name="Day07_Label" FontSize="22" Text="Day 7: " TextColor="#202020" FontAttributes="Bold"/>
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="10,10,10,10" />
                </Border.StrokeShape>
            </Border>
            <Border Padding="5.0" HorizontalOptions="Fill" StrokeThickness="3" Stroke="#0091D5">
                <Label x:Name="DT_Label" FontSize="22" Text="Prediction time:" TextColor="#202020" FontAttributes="Bold"></Label>
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="10,10,10,10" />
                </Border.StrokeShape>
            </Border>
            <Label x:Name="predictionLabel"
               FontSize="18"
               HorizontalOptions="Center"
               VerticalOptions="CenterAndExpand" 
               TextColor="#AAAAAA"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>