<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Energy_Prediction_System.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Energy_Prediction_System"
    Shell.FlyoutBehavior="Disabled"
    Title="Energy_Prediction_System">

    <!-- ShellContent with TitleView -->
    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage">

        <!-- Move Shell.TitleView inside ShellContent -->
        <Shell.TitleView>
            <Label Text="Energy Prediction System"
                   TextColor="#202020"
                   FontSize="30"
                   VerticalOptions="Center"
                   HorizontalOptions="Center" />
        </Shell.TitleView>
    </ShellContent>
</Shell>
