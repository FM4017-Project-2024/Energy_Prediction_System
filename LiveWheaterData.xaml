<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Energy_Prediction_System.LiveWheaterData"
             Title="Current Weather">
    <VerticalStackLayout Padding="1,0" Spacing="5"  BackgroundColor="WhiteSmoke">
        <Label Text="Weather" FontSize="30" FontAttributes="Bold" HorizontalOptions="Center" TextColor="#202020" />

        <Border Padding="5.0" HorizontalOptions="Fill" StrokeThickness="3" Stroke="#0091D5">
