        <Button Text="Add weatherdata to database" 
                FontSize="18" 
                BackgroundColor="#1C4E80"
                TextColor="White" 
                VerticalOptions="End" 
                HorizontalOptions="Center"
                Clicked="OnAddWeatherDataButtonClicked" />
    </VerticalStackLayout>
</ContentPage>

